<!-- Black Rook J2EE Small Framework -->

<xml>

<listener>
	<listener-class>com.blackrook.j2ee.Toolkit</listener-class>
</listener>

<context-param>
    <param-name>small.application.package.root</param-name>
    <param-value>com.add.controller.root.here</param-value>
</context-param>

<servlet>
	<servlet-name>DispatcherServlet</servlet-name>
	<servlet-class>com.blackrook.j2ee.DispatcherServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>DispatcherServlet</servlet-name>
	<url-pattern>*.view</url-pattern>
</servlet-mapping>

</xml>
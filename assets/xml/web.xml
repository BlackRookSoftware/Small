<!-- Black Rook J2EE Small Framework -->

<xml>

<servlet>
	<init-param>
	    <param-name>small.application.package.root</param-name>
	    <param-value>com.add.app.package.root.here</param-value>
	</init-param>
	<init-param>
	    <param-name>small.application.driver.json.class</param-name>
	    <param-value>com.add.JSONDriver.implementation.here</param-value>
	</init-param>
	<servlet-name>SmallDispatcher</servlet-name>
	<servlet-class>com.blackrook.j2ee.small.SmallDispatcher</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>SmallDispatcher</servlet-name>
	<url-pattern>*.view</url-pattern>
</servlet-mapping>

</xml>